<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
           fx:id="StackPane"
           fx:controller="com.quizlet.Welcome">
    
    <children>
        <VBox alignment="TOP_RIGHT" prefWidth="600" prefHeight="400">
            <children>
                <HBox alignment="TOP_RIGHT">
                    <children>
                        <Button fx:id="themeToggleButton"
                                onAction="#toggleTheme"
                                text="🌙"
                                styleClass="theme-toggle"
                                prefWidth="40" prefHeight="40" />
                    </children>
                    <padding>
                        <Insets top="10" right="10"/>
                    </padding>
                </HBox>
                <HBox alignment="CENTER" spacing="10">
                    <children>
                        <Button text="Создать квиз" onAction="#newQuiz" prefWidth="200" prefHeight="80"/>
                        <Button text="Посмотреть мои квизы" onAction="#openQuizes" prefWidth="200" prefHeight="80"/>
                        <Button text="Статистика" onAction="#Statistic" prefWidth="200" prefHeight="80"/>
                    </children>
                    <padding>
                        <Insets top="100"/>
                    </padding>
                </HBox>
            </children>
        </VBox>
    </children>
</StackPane>
