<?xml version="1.0" encoding="UTF-8"?>





<?import javafx.scene.control.*?>


<?import javafx.scene.layout.*?>





<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quizlet.CheckAnswerController">


    <HBox fx:id="RightAnswerBox" spacing="100" >


        <Label text="Правильный ответ:"></Label>


        <Label fx:id="RightAnswer"></Label>


    </HBox>


    <HBox fx:id="UserAnswerBox" spacing="100">


        <Label text="Ваш ответ:"></Label>


        <Label fx:id="UserAnswer"></Label>


    </HBox>


    <HBox>


        <Button fx:id="RightAnswerButton" onAction="#handleRightAnswerButton">Ответ верен</Button>


        <Button fx:id="WrongAnswerButton" onAction="#handleWrongAnswerButton" > Ответ неверен </Button>


    </HBox>


</VBox>